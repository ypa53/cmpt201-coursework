#define _GNU_SOURCE

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>



int main() {
  char *line = NULL;
  size_t len = 0;

  printf("Enter programs to run.\n");
  while (1) {
    printf("> ");
    if (getline(&line, &len, stdin) == -1) {
      break;
    }
    line[strcspn(line, "\n")] = '\0';

    if(execl(line, line, (char *)NULL) == -1) {
      perror("Exec failure");
    }
  }

  free(line);
  return 0;
}
